{% set site_info = ngsite.siteInfoContent %}
{% set site_name = ngsite.siteInfoContent.fields.site_name.value.text|trim %}

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                {% include '@ibexadesign/parts/site_logo.html.twig' %}
                <a href="#" class="close " data-dismiss="modal" aria-label="Close">
                    <span class="icon-cancel"></span>
                </a>
            </div>
            <div class="modal-body">
                {{ ng_view_content(
                    content,
                    'payload',
                    {
                        params: {
                            action: path('ngsite_info_collection_ajax_submit', { formContentId: content.id }),
                            referer: referer|default(null),
                        },
                    }
                ) }}
            </div>
        </div>
    </div>
</div>
