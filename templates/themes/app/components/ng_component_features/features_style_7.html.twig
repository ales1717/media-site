{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import "@ibexadesign/parts/macros.html.twig" as macros %}

{% block content %}
    <article class="view-component view-component-features features-style-7">
        <header class="article-header">
            <h2 class="title">{{ ng_render_field(content.fields.title) }}</h2>

            {% if not content.fields.link_label.empty %}
                <div class="info">
                    <a href="#" class="btn btn-secondary">{{ content.fields.link_label.value.text }}</a>
                </div>
            {% endif %}
        </header>

        {% set items = ng_component_items(content, "item") %}
        {% if items|length %}
            <div class="list-zigzag">
                {% for item in items %}
                    <div class="list-item">
                        {% if not item.title.empty or not item.description.empty %}
                            <article class="view-type view-type-zigzag {## !!!! ##}ng-banner vl9{## /!!!! ##}">
                                {% if item.image is defined and not item.image.empty %}
                                    <figure class="image">
                                        {{ ng_render_field(item.image) }}
                                    </figure>
                                {% endif %}
                                <div class="article-content">
                                    <header class="article-header">
                                        {% if item.eyebrow_title is defined and not item.eyebrow_title.empty %}
                                            <span class="eyebrow-title">{{ ng_render_field(item.eyebrow_title) }}</span>
                                        {% endif %}
                                        {% if item.title is defined and not item.title.empty %}
                                            <h2 class="title">{{ ng_render_field(item.title) }}</h2>
                                        {% endif %}
                                    </header>
                                    {% if item.description is defined and not item.description.empty %}
                                        <div class="short">
                                            {{ ng_render_field(item.description) }}
                                        </div>
                                    {% endif %}
                                    {% if item.item_link_label is defined and not item.item_link_label.empty %}
                                        <div class="short">
                                            <a href="#" class="btn btn-outline">{{ item.item_link_label.value.text }}</a>
                                        </div>
                                    {% endif %}
                                </div>
                            </article>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </article>
{% endblock %}
